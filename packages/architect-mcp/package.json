{
  "name": "@agiflowai/architect-mcp",
  "description": "MCP server for software architecture design and planning",
  "version": "1.0.1",
  "license": "AGPL-3.0",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript"
  ],
  "bin": {
    "architect-mcp": "./dist/cli.cjs"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "node --loader ts-node/esm src/cli.ts mcp-serve",
    "build": "tsdown",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agiflowai/aicode-utils": "workspace:^",
    "@agiflowai/coding-agent-bridge": "workspace:^",
    "@modelcontextprotocol/sdk": "1.19.1",
    "@types/express": "^5.0.3",
    "chalk": "5.6.2",
    "commander": "14.0.1",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "js-yaml": "4.1.0",
    "minimatch": "^10.0.3",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "tsdown": "^0.15.6",
    "typescript": "5.9.3",
    "vitest": "^2.1.8"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  }
}
